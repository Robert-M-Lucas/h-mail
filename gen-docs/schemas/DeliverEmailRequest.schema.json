{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DeliverEmailRequest",
  "type": "object",
  "properties": {
    "email": {
      "$ref": "#/$defs/WithPow"
    },
    "source_domain": {
      "type": "string"
    },
    "source_user": {
      "type": "string"
    },
    "verify_ip": {
      "$ref": "#/$defs/AuthTokenDataField"
    },
    "verify_ip_port": {
      "type": "integer",
      "format": "uint16",
      "maximum": 65535,
      "minimum": 0
    }
  },
  "required": [
    "email",
    "source_user",
    "source_domain",
    "verify_ip",
    "verify_ip_port"
  ],
  "$defs": {
    "AuthTokenDataField": {
      "description": "An `AuthToken` with attached expiry time",
      "type": "object",
      "properties": {
        "expires_at": {
          "$ref": "#/$defs/SystemTimeField"
        },
        "token": {
          "$ref": "#/$defs/AuthTokenField"
        }
      },
      "required": [
        "token",
        "expires_at"
      ]
    },
    "AuthTokenField": {
      "description": "Represents a base-64 encoded authentication token.\nUsed in bearer tokens and in some requests.",
      "type": "string"
    },
    "BigUintField": {
      "description": "A base-64 little-endian encoding of a large unsigned integer",
      "type": "string"
    },
    "EmailPackage": {
      "type": "object",
      "properties": {
        "contents": {
          "type": "string"
        },
        "destination_user": {
          "type": "string"
        }
      },
      "required": [
        "destination_user",
        "contents"
      ]
    },
    "SystemTimeField": {
      "description": "A timestamp represented as milliseconds since epoch",
      "type": "integer",
      "format": "uint128",
      "minimum": 0
    },
    "WithPow": {
      "type": "object",
      "properties": {
        "inner": {
          "$ref": "#/$defs/EmailPackage"
        },
        "iters": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "pow_result": {
          "$ref": "#/$defs/BigUintField"
        },
        "token": {
          "$ref": "#/$defs/BigUintField"
        }
      },
      "required": [
        "inner",
        "iters",
        "token",
        "pow_result"
      ]
    }
  }
}